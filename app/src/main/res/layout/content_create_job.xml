<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editjname"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Enter name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editjname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editdescription"
        android:layout_below="@+id/editname"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Enter job name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editjname"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Enter job description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editdescription"
        android:layout_below="@+id/editdescription"
        android:layout_marginTop="76dp"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Enter payment($)"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/editaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editpay"
        android:layout_below="@+id/editpay"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Enter address"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="105dp"
        android:fontFamily="sans-serif"
        android:text="Author:"
        android:textAlignment="center"
        android:textColor="@color/waldo_grey"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editjname"
        android:layout_alignBottom="@+id/editjname"
        android:layout_alignStart="@+id/textView5"
        android:fontFamily="sans-serif"
        android:text="Title:"
        android:textAlignment="center"
        android:textColor="@color/waldo_grey"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editdescription"
        android:layout_alignBottom="@+id/editdescription"
        android:layout_alignStart="@+id/textView6"
        android:fontFamily="sans-serif"
        android:text="Description:"
        android:textAlignment="center"
        android:textColor="@color/waldo_grey"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editpay"
        android:layout_alignBottom="@+id/editpay"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:fontFamily="sans-serif"
        android:text="Payment:"
        android:textAlignment="center"
        android:textColor="@color/waldo_grey"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editaddress"
        android:layout_alignBottom="@+id/editaddress"
        android:layout_alignStart="@+id/textView6"
        android:fontFamily="sans-serif"
        android:text="Location:"
        android:textAlignment="center"
        android:textColor="@color/waldo_grey"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editaddress"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="103dp"
        android:text="Create" />

</RelativeLayout>