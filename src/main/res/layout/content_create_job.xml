<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/editname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter name"
        android:gravity="center_vertical"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editjname" />

    <EditText
        android:id="@+id/editjname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter job name"
        android:gravity="center_vertical"
        android:layout_below="@+id/editname"
        android:layout_alignStart="@+id/editdescription"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Enter job description"
        android:gravity="center_vertical"
        android:layout_below="@+id/editjname"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView5" />

    <EditText
        android:id="@+id/editpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editdescription"
        android:layout_marginTop="76dp"
        android:layout_toEndOf="@+id/textView5"
        android:ems="10"
        android:gravity="center_vertical"
        android:hint="Enter payment($)"
        android:inputType="numberDecimal"
        android:layout_alignStart="@+id/editdescription" />

    <EditText
        android:id="@+id/editaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPostalAddress"
        android:hint="Enter address"
        android:gravity="center_vertical"
        android:layout_below="@+id/editpay"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editpay" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author:"
        android:textStyle="bold"
        android:layout_marginTop="105dp"
        android:textSize="20dp"
        android:textColor="@color/blue_grey_800"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editjname"
        android:layout_alignBottom="@+id/editjname"
        android:layout_alignStart="@+id/textView5"
        android:fontFamily="sans-serif"
        android:text="Title:"
        android:textColor="@color/blue_grey_800"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editdescription"
        android:layout_alignBottom="@+id/editdescription"
        android:layout_alignStart="@+id/textView6"
        android:fontFamily="sans-serif"
        android:text="Description:"
        android:textColor="@color/blue_grey_800"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:fontFamily="sans-serif"
        android:text="Payment:"
        android:textColor="@color/blue_grey_800"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_alignBaseline="@+id/editpay"
        android:layout_alignBottom="@+id/editpay"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Location:"
        android:textColor="@color/blue_grey_800"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editaddress"
        android:layout_alignBottom="@+id/editaddress"
        android:layout_alignStart="@+id/textView6"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"


        android:layout_marginTop="18dp"
        android:layout_below="@+id/getlocation"
        android:layout_alignStart="@+id/getlocation" />

    <Button
        android:id="@+id/getlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="location"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/editaddress"
        android:layout_centerHorizontal="true" />

</RelativeLayout>